{
  "compilerOptions": {
    /* Versión de ECMAScript que queremos */
    "target": "ES2020",

    /* Soporte para Node.js y Firebase */
    "module": "commonjs",
    "moduleResolution": "node",

    /* Archivos de tipado */
    "lib": ["ES2020"],

    /* Salida de los .js */
    "outDir": "lib",
    "rootDir": "src",

    /* Soporte JSON (para serviceAccount.json) */
    "resolveJsonModule": true,

    /* Reglas de compilación */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Opciones extra útiles */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
